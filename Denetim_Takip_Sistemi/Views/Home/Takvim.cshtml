
@{
    ViewBag.Title = "Takvim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="trending-area fix pt-25 gray-bg" >
        <div class="container" style="min-height:530px;"> 
            <!-- Responsive calendar - START -->
            <div class="responsive-calendar">
                <div class="row" style="text-align:center">
                    <div class="col-2"><a class="pull-left" data-go="prev" style="color:darkred">Prev</a></div>
                    <div class="col-8"><h4><span data-head-year></span> <span data-head-month></span></h4></div>
                    <div class="col-2"><a class="pull-right" data-go="next" style="color:darkred">Next</a></div>
                </div><hr />
                <div class="day-headers">
                    <div class="day header">Mon</div>
                    <div class="day header">Tue</div>
                    <div class="day header">Wed</div>
                    <div class="day header">Thu</div>
                    <div class="day header">Fri</div>
                    <div class="day header">Sat</div>
                    <div class="day header">Sun</div>
                </div>
                <div class="days" data-group="days">

                </div>
            </div>
            <!-- Responsive calendar - END -->
        </div>
    </div>
